{
  "name": "ignitus-server",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": "13.2.0"
  },
  "scripts": {
    "build": "tsc",
    "postinstall": "npm run build",
    "start": "ts-node --files api/index.ts",
    "start-dev": "nodemon",
    "tslint": "tslint -c tslint.json -p tsconfig.json"
  },
  "nyc": {
    "check-coverage": false,
    "all": true,
    "extension": [
      ".js"
    ],
    "include": [
      "**/*.js"
    ],
    "exclude": [
      "**/*.spec.js",
      "build",
      "node_modules"
    ],
    "collectCoverageFrom": [
      "./config/*.js"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "require": [
      "babel-register"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "dependencies": {
    "babel-register": "^6.26.0",
    "bcrypt": "^3.0.1",
    "bcryptjs": "^2.4.3",
    "body-parser": "~1.18.2",
    "cookie-parser": "~1.4.3",
    "crypto": "^1.0.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.2.0",
    "mongoose": "^5.0.12",
    "morgan": "~1.9.0",
    "node-linkedin": "^0.5.6",
    "nyc": "^15.0.0",
    "ts-node": "8.7.0",
    "tslib": "1.11.1",
    "typescript": "3.8.3"
  },
  "devDependencies": {
    "@types/eslint": "6.8.1",
    "@types/jsonwebtoken": "8.5.0",
    "@types/mongoose": "5.7.21",
    "@typescript-eslint/eslint-plugin": "3.0.0",
    "@typescript-eslint/parser": "3.0.0",
    "@types/cookie-parser": "1.4.2",
    "@types/express": "4.17.1",
    "@types/morgan": "1.9.0",
    "@types/node": "13.9.1",
    "eslint": "5.16.0",
    "eslint-config-airbnb": "18.1.0",
    "eslint-config-airbnb-typescript": "7.2.1",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-import": "2.20.2",
    "eslint-plugin-prettier": "3.1.3",
    "nodemon": "1.19.4"
  }
}
